{# templates/visite/_delete_form.html.twig #}

<form method="post" action="{{ path('app_visite_delete', {'id_etudiant': id_etudiant, 'id': visite.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette visite?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ visite.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
